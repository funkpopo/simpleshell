  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2021",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["ESNext"]
  }
}
